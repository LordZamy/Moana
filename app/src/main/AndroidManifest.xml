<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="moanainc.com.moana">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.HomeActivity" />
        <activity android:name=".controllers.LoginActivity" />
        <activity android:name=".controllers.RegisterActivity" />
        <activity
            android:name=".controllers.WelcomeActivity"
            android:label="Welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".controllers.ProfileActivity" />
        <activity
            android:name=".controllers.ReportActivity"
            android:label="Create a Report"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".controllers.ReportListActivity"
            android:label="List of Reports"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>